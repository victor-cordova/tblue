{
  "parser": "babel-eslint",
  "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
          "jsx": true
      }
  },
  "rules": {
    "comma-dangle": ["error", "always-multiline"],
    "no-debugger": 2,
    "no-dupe-args": 2,
    "no-dupe-keys": 2,
    "no-empty": 2,
    "no-extra-parens": ["error", "all"],
    "no-extra-semi": 2,
    "no-undef": 2,
    "no-unused-vars": 2,
    "indent": ["error", 4],
    "no-trailing-spaces": 2,
    "quotes": ["error", "single"]
  },
  "plugins": ["jest"],
  "env": {
    "jest/globals": true,
    "node": true,
    "es6": true
  }
}
